<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C667A"
    android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="cart_inner_constraintlayour"
                            android:layout_margin="0dp">

                                <ImageView
                                    android:id="@+id/top_lable"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:contentDescription="top lable"
                                    android:src="@drawable/cart_boxes"
                                    app:layout_constraintBottom_toTopOf="@+id/cart_item_image"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_image"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_image"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0" />

                                <TextView
                                    android:id="@+id/mess_name_top"
                                    android:layout_width="109dp"
                                    android:layout_height="39dp"
                                    android:contentDescription="mess name"
                                    android:text="Anpurna"
                                    android:textSize="28sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/top_lable"
                                    app:layout_constraintEnd_toEndOf="@+id/top_lable"
                                    app:layout_constraintHorizontal_bias="0.508"
                                    app:layout_constraintStart_toStartOf="@+id/top_lable"
                                    app:layout_constraintTop_toTopOf="@+id/top_lable" />

                                <ImageView
                                    android:id="@+id/cart_item_image"
                                    android:layout_width="378dp"
                                    android:layout_height="295dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:contentDescription="mealImage"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/cart_boxes"
                                    app:layout_constraintBottom_toTopOf="@+id/item_description_box"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.588"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/cart_item_details"
                                    android:layout_width="378dp"
                                    android:layout_height="157dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="cart item details"
                                    android:src="@drawable/cart_boxes"
                                    app:layout_constraintBottom_toTopOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/item_description_box"
                                    app:layout_constraintStart_toStartOf="@+id/item_description_box"
                                    app:layout_constraintTop_toBottomOf="@+id/item_description_box" />

                                <ImageView
                                    android:id="@+id/line_one_cart"
                                    android:layout_width="330dp"
                                    android:layout_height="2dp"
                                    android:src="@drawable/line_one"
                                    android:contentDescription="line one"
                                    app:layout_constraintBottom_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_details"
                                    app:layout_constraintHorizontal_bias="0.479"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_details"
                                    app:layout_constraintTop_toTopOf="@+id/cart_item_details"
                                    app:layout_constraintVertical_bias="0.277" />

                                <TextView
                                    android:id="@+id/bill_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Bill Details"
                                    android:contentDescription="bill details"
                                    android:textColor="#5D6B70"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toTopOf="@+id/line_one_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_details"
                                    app:layout_constraintHorizontal_bias="0.079"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_details"
                                    app:layout_constraintTop_toTopOf="@+id/cart_item_details"
                                    app:layout_constraintVertical_bias="0.0" />

                                <ImageView
                                    android:id="@+id/line_two_cart"
                                    android:layout_width="330dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:contentDescription="line two"
                                    android:src="@drawable/line_one"
                                    app:layout_constraintBottom_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_details"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_details"
                                    app:layout_constraintTop_toBottomOf="@+id/line_one_cart"
                                    app:layout_constraintVertical_bias="0.305" />

                                <TextView
                                    android:id="@+id/item_total"
                                    android:contentDescription="item total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Item total"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toTopOf="@+id/line_two_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/line_two_cart"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/line_two_cart"
                                    app:layout_constraintTop_toBottomOf="@+id/line_one_cart"
                                    app:layout_constraintVertical_bias="0.041" />

                                <TextView
                                    android:id="@+id/fill_item_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:contentDescription="fill item total"
                                    android:text="Rs 2400"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toTopOf="@+id/line_two_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/line_two_cart"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toEndOf="@+id/item_total"
                                    app:layout_constraintTop_toBottomOf="@+id/line_one_cart"
                                    app:layout_constraintVertical_bias="0.0" />

                                <ImageView
                                    android:contentDescription="line three"
                                    android:id="@+id/line_three_cart"
                                    android:layout_width="330dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:src="@drawable/line_one"
                                    app:layout_constraintBottom_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_details"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_details"
                                    app:layout_constraintTop_toBottomOf="@+id/line_two_cart"
                                    app:layout_constraintVertical_bias="0.435" />

                                <TextView
                                    android:id="@+id/delivery_charge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Delivery Charge"
                                    android:contentDescription="delivery charge"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toTopOf="@+id/line_three_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/line_three_cart"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/line_three_cart"
                                    app:layout_constraintTop_toBottomOf="@+id/line_two_cart"
                                    app:layout_constraintVertical_bias="0.047" />

                                <TextView
                                    android:id="@+id/fill_delivery_charge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:contentDescription="fill delivery charge"
                                    android:text="Free"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toTopOf="@+id/line_three_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/line_three_cart"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toEndOf="@+id/delivery_charge"
                                    app:layout_constraintTop_toBottomOf="@+id/line_two_cart"
                                    app:layout_constraintVertical_bias="0.1" />

                                <TextView
                                    android:id="@+id/to_pay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:contentDescription="to pay "
                                    android:text="To Pay"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/line_three_cart"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/line_three_cart"
                                    app:layout_constraintTop_toBottomOf="@+id/line_three_cart"
                                    app:layout_constraintVertical_bias="1.0" />

                                <TextView
                                    android:id="@+id/fill_to_pay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:contentDescription="fill to pay"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Rs 2400"
                                    android:textColor="#5D6B70"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/line_three_cart"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toEndOf="@+id/to_pay"
                                    app:layout_constraintTop_toBottomOf="@+id/line_three_cart"
                                    app:layout_constraintVertical_bias="1.0" />

                                <ImageView
                                    android:id="@+id/item_description_box"
                                    android:layout_width="377dp"
                                    android:layout_height="128dp"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="item description box"
                                    android:src="@drawable/cart_boxes"
                                    app:layout_constraintBottom_toTopOf="@+id/cart_item_details"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_image"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_image"
                                    app:layout_constraintTop_toBottomOf="@+id/cart_item_image" />

                                <TextView
                                    android:id="@+id/fill_item_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="fill item name"
                                    android:text="Alu Paratha"
                                    android:textColor="#5D6B70"
                                    android:textSize="20sp"
                                    android:textStyle="bold"

                                    app:layout_constraintBottom_toBottomOf="@+id/item_description_box"
                                    app:layout_constraintEnd_toEndOf="@+id/item_description_box"
                                    app:layout_constraintStart_toStartOf="@+id/item_description_box"
                                    app:layout_constraintTop_toTopOf="@+id/item_description_box"
                                    app:layout_constraintVertical_bias="0.138" />

                                <TextView
                                    android:id="@+id/fill_item_description"
                                    android:layout_width="353dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:contentDescription="fill item description"
                                    android:text="Lorem ☼ ipsum ☼ dolor ☼ sit ☼ amet ☼ consectetur ."
                                    android:textAlignment="center"
                                    android:textColor="#5D6B70"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="@+id/item_description_box"
                                    app:layout_constraintEnd_toEndOf="@+id/item_description_box"
                                    app:layout_constraintStart_toStartOf="@+id/item_description_box"
                                    app:layout_constraintTop_toBottomOf="@+id/fill_item_name"
                                    app:layout_constraintVertical_bias="0.76" />

                                <TextView
                                    android:id="@+id/fill_price_in_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"
                                    android:layout_marginTop="8dp"
                                    android:contentDescription="fill price in description"
                                    android:text="Rs 2400"
                                    android:textColor="#5D6B70"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toTopOf="@+id/fill_item_description"
                                    app:layout_constraintEnd_toEndOf="@+id/fill_item_description"
                                    app:layout_constraintHorizontal_bias="0.935"
                                    app:layout_constraintStart_toStartOf="@+id/fill_item_description"
                                    app:layout_constraintTop_toBottomOf="@+id/fill_item_name"
                                    app:layout_constraintVertical_bias="0.0" />

                                <Button
                                    android:id="@+id/btn_qnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="quantity"
                                    android:textSize="8dp"
                                    android:contentDescription="quantity button"
                                    app:layout_constraintBottom_toTopOf="@+id/fill_item_description"
                                    app:layout_constraintEnd_toStartOf="@+id/fill_price_in_description"
                                    app:layout_constraintHorizontal_bias="0.06"
                                    app:layout_constraintStart_toStartOf="@+id/item_description_box"
                                    app:layout_constraintTop_toBottomOf="@+id/fill_item_name"
                                    app:layout_constraintVertical_bias="0.444" />

                                <ImageView
                                    android:id="@+id/bottom_lable_cart"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="4dp"
                                    android:contentDescription="bottom lable"
                                    android:src="@drawable/cart_boxes"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/cart_item_details"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="@+id/cart_item_details"
                                    app:layout_constraintTop_toBottomOf="@+id/cart_item_details"
                                    app:layout_constraintVertical_bias="0.0" />

                                <ImageView
                                    android:id="@+id/home_tic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/hommie"
                                    app:layout_constraintBottom_toBottomOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/bottom_lable_cart"
                                    app:layout_constraintHorizontal_bias="0.044"
                                    app:layout_constraintStart_toStartOf="@+id/bottom_lable_cart"
                                    app:layout_constraintTop_toTopOf="@+id/bottom_lable_cart"
                                    app:layout_constraintVertical_bias="0.218" />

                                <TextView
                                    android:id="@+id/deliver_to_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Deliver to home"
                                    android:textColor="#383838"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/bottom_lable_cart"
                                    app:layout_constraintHorizontal_bias="0.015"
                                    app:layout_constraintStart_toEndOf="@+id/home_tic"
                                    app:layout_constraintTop_toTopOf="@+id/bottom_lable_cart"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/home_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Ashok vihar"
                                    android:textColor="#383838"
                                    android:textSize="12dp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/deliver_to_home"
                                    app:layout_constraintHorizontal_bias="0.466"
                                    app:layout_constraintStart_toStartOf="@+id/deliver_to_home"
                                    app:layout_constraintTop_toTopOf="@+id/deliver_to_home"
                                    app:layout_constraintVertical_bias="0.0" />

                                <ImageView
                                    android:id="@+id/imageView_back_gray"
                                    android:layout_width="205dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/cart_box_checkout_gray"
                                    app:layout_constraintBottom_toBottomOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/bottom_lable_cart"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/bottom_lable_cart"
                                    app:layout_constraintTop_toBottomOf="@+id/home_address"
                                    app:layout_constraintVertical_bias="1.0" />

                                <Button
                                    android:id="@+id/btn_to_pay"
                                    android:layout_width="205dp"
                                    android:layout_height="36dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:text="PROCEED TO PAY"
                                    android:textColor="#FFF8E0"
                                    android:background="@drawable/cart_box_checkout_purple"
                                    app:layout_constraintBottom_toBottomOf="@+id/bottom_lable_cart"
                                    app:layout_constraintEnd_toEndOf="@+id/bottom_lable_cart"
                                    app:layout_constraintHorizontal_bias="0.428"
                                    app:layout_constraintStart_toEndOf="@+id/imageView_back_gray"
                                    app:layout_constraintTop_toTopOf="@+id/bottom_lable_cart"
                                    app:layout_constraintVertical_bias="1.0" />

                                <TextView
                                    android:id="@+id/price_in_lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:text="Rs 70"
                                    android:textColor="#404040"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/imageView_back_gray"
                                    app:layout_constraintEnd_toEndOf="@+id/imageView_back_gray"
                                    app:layout_constraintHorizontal_bias="0.442"
                                    app:layout_constraintStart_toStartOf="@+id/imageView_back_gray"
                                    app:layout_constraintTop_toTopOf="@+id/imageView_back_gray"
                                    app:layout_constraintVertical_bias="0.0" />

                                <Button
                                    android:id="@+id/add_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/cart_boxes"
                                    android:text="ADD ADDRESS"
                                    android:textColor="#FFAE19"
                                    app:layout_constraintBottom_toTopOf="@+id/btn_to_pay"
                                    app:layout_constraintEnd_toEndOf="@+id/bottom_lable_cart"
                                    app:layout_constraintHorizontal_bias="0.979"
                                    app:layout_constraintStart_toEndOf="@+id/deliver_to_home"
                                    app:layout_constraintTop_toTopOf="@+id/bottom_lable_cart" />

                        </android.support.constraint.ConstraintLayout>
                </ScrollView>
        </android.support.constraint.ConstraintLayout>
</LinearLayout>